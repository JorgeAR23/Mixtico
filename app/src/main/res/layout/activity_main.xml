            <TextView
                android:id="@+id/textViewSaludos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="88dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/textViewAciertos"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonSaludos" />

            <TextView
                android:id="@+id/textViewVerbos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/textViewAciertos"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonVerbos" />

            <TextView
                android:id="@+id/textViewLimite"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="80dp"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonVerbos" />

            <ImageButton
                android:id="@+id/imageButtonAdverbios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Adverbios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitulo"
                app:srcCompat="@drawable/adverbios" />

            <ImageButton
                android:id="@+id/imageButtonAnimales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Animales"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitulo"
                app:srcCompat="@drawable/animales" />

            <ImageButton
                android:id="@+id/imageButtonAnimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="34dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAdverbios"
                app:srcCompat="@drawable/animo" />

            <ImageButton
                android:id="@+id/imageButtonCalendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Colores"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAnimales"
                app:srcCompat="@drawable/calendario" />

            <ImageButton
                android:id="@+id/imageButtonColores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Colores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAnimo"
                app:srcCompat="@drawable/colores" />

            <ImageButton
                android:id="@+id/imageButtonCuerpo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Cuerpo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCalendario"
                app:srcCompat="@drawable/cuerpo" />

            <ImageButton
                android:id="@+id/imageButtonFamilia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="34dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Familia"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewColores"
                app:srcCompat="@drawable/familia" />

            <ImageButton
                android:id="@+id/imageButtonNumeros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCuerpo"
                app:srcCompat="@drawable/numeros" />

            <ImageButton
                android:id="@+id/imageButtonObjetos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="34dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFamilia"
                app:srcCompat="@drawable/objetos" />

            <ImageButton
                android:id="@+id/imageButtonPronombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                android:onClick="Pronombres"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNumeros"
                app:srcCompat="@drawable/pronombres" />

            <ImageButton
                android:id="@+id/imageButtonSaludos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="34dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewObjetos"
                app:srcCompat="@drawable/saludos" />

            <ImageButton
                android:id="@+id/imageButtonVerbos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="@string/descripciones"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPronombres"
                app:srcCompat="@drawable/verbos" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/transparent_background"
            app:menu="@menu/bottom_nav_menu" />
    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/descripciones"
        android:src="@drawable/home"
        app:layout_anchor="@id/bottomAppBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>