<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="25dp" />
            <solid android:color="#CCCCCC" /> <!-- Color de fondo temporal cuando se presiona -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="25dp" />
            <solid android:color="@color/white" /> <!-- Color de fondo normal -->
        </shape>
    </item>
</selector>
